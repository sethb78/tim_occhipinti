<div id="home">
    <div class="span12 hero-unit ">
        <%= image_tag('tim-blog.jpeg') %>
        <h2><%= @blog.title %></h2>
        <p><%= @blog.tagline %></p>
        <div class="content">
            <p><%= raw truncate @blog.content, length: 600 %></p>
            <p><%= link_to("Read More", blog_path(@blog)) %>   |   <%= link_to("Full Archives", blogs_path) %></p>
            <hr>
        </div>
    </div>
    <div class="row-fluid background-white margin-5">
    <%= render :partial => 'news_articles' %>
        <%= render :partial => 'upcoming_events' %>
    </div>
    <div class="row">
        <%= render :partial => 'photo_carousel' %>
        <div class="span1"></div>
            <div class="span6 video">
                <%=  %>
            <iframe width="400" height="300" src="<%= @video.link %>" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
</div>

