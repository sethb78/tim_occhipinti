<div id="home">
    <div class="span12">
        <div class="hero-unit">
            <%= image_tag('tim-blog.jpeg') %>
            <h2><%= @blog.title %></h2>
            <p><%= @blog.tagline %></p>
            <div class="content">
                <p><%= raw truncate @blog.content, length: 400 %></p>
                <p><%= link_to("Read More", blog_path(@blog)) %></p>
            </div>
        </div>
    </div>
</div>