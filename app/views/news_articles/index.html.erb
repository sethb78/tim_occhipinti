<div class="news-archive">
	<%= provide(:title, "Article Archives") %>
	<h3 class="center"> Past Articles</h3>
  <%= will_paginate(@archive_news) %>
		<% @archive_news.each do |article| %>
			<p><%= link_to(article.title, article.link, target: "blank") %> <br />
			<%= article.source %>--<%= article.date.strftime("%b %d, %Y") %></p>
			<% end %>
</div>