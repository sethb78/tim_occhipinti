<% provide(:title, 'Photo Galleries') %>
<div id="galleries">
	<div id="add-gallery-link">
    	<%= link_to "Add Gallery Here", new_gallery_path %>
	</div>
	<ul class="thumbnails">
		<% @galleries.each do |gallery| %>
			<li class="span4">
				<div class="thumbnail">
				   <div class="edit-delete">                            
				   		<%= link_to gallery.name, gallery %>
                    </div>
					<%= link_to image_tag(gallery.cover_image), gallery_path(gallery)%>
					    <h5><%=  gallery.description %></h5>
					    <span id="photo-counter"><%= pluralize(gallery.photos.count, 'photo')%> </span>
	    		</div>
			</li>
		<% end %>
	</ul>
</div>
