<% provide(:title, 'Photo Galleries') %>
<div id="galleries">
	<div id="add-gallery-link">
    	<%= link_to "Add Gallery Here", new_gallery_path %>
	</div>
	<ul class="thumbnails">
		<% @galleries.each do |gallery| %>
			<li class="span4">
				<div class="thumbnail">
				   <div class="gallery-name">                            
				   		<%= link_to gallery.name, gallery %>
                    </div>
					<%= link_to image_tag(gallery.cover_image), gallery_path(gallery)%>
					<h5><span>
						   	<div id="photo-counter">
						   		<%= link_to "Edit Gallery", edit_gallery_path(gallery) %>
						   		<div id="count">
						   			<%= link_to(pluralize(gallery.photos.count, 'photo'), gallery) %>
						   		</div> 
						   	</div>
						</span>
					</h5>
	    		</div>
			</li>
		<% end %>
	</ul>
</div>
