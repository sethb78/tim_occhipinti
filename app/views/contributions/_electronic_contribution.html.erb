<div class="contribute">
	<%= semantic_form_for @contribution do |f| %>
	 	<%= render 'shared/error_messages', object: f.object %>
	 	<%= render "#{@contribution.current_step}_step", :f => f %>
  	    <%= f.actions do %>
	      	<%= f.submit "Back", :name => "back_button" unless @contribution.first_step? || @contribution.last_step?%>
	      	<%= f.action :submit, :label => "Continue"  unless @contribution.last_step? %>
	      	<% if @contribution.last_step? %>
	      		<div id="donate-button">
	      		<form action="https://www.paypal.com/cgi-bin/webscr" method="post">
					<input type="hidden" name="cmd" value="_s-xclick">
					<input type="hidden" name="hosted_button_id" value="M7WJB2AGSQZSE">
					<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
					<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
				</form>
			</div>
			<% end %>
    	<% end %>
	<% end %>
</div>
