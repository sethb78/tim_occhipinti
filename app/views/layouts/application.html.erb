<!DOCTYPE html>
<html>
	<head>
		<%= favicon_link_tag "favicon.ico" %>
        <title> <%= full_title(yield(:title)) %></title>
	  	<%= stylesheet_link_tag    "application", :media => "all" %>
	  	<%= javascript_include_tag "application" %>
	  	<%= csrf_meta_tags %>
	  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= render 'layouts/scripts' %>
	  	<%= render 'layouts/shim' %>
	</head>	
	<body>	
		<%= render'layouts/topline' %>	
		<div class="container">
			<div class="row-fluid">
				<div class="span12">
					<%= render 'layouts/main_image' %>		
					<div class="span12">
						<%= render 'layouts/navigation-bar' %>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
       				<h1><%= yield(:title) %></h1>
       				<% if signed_in? %>
       					<div class="span12">
							<h3 id="sign-out-link"><%= link_to("Sign Out as Administrator", signout_path, method: "delete", :id => "alert-signout") %></h5>
						</div>
					<% end %>
       				<% flash.each do |key, value| %>
       				   	<div class="span12">
         					<%= content_tag(:div, value, class: "alert alert-#{key}") %>
         			    </div>
					<% end %>
               	</div>
            </div>
            <div class="row-fluid">
        		<div class="span9 main-info">
					<%= yield %>
				</div>
				<div class="span3 side_bar">
					<div class="row-fluid">
						<div class="span12">
							<%= render 'layouts/intouch' %>
						</div>
						<div class="span12">
							<%= render 'layouts/voter_registration' %>
						</div>
							<%= render 'layouts/twitter' %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%= render 'layouts/footer' %>
	</body>
</html>